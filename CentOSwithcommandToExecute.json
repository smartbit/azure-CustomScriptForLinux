{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "location": "[resourceGroup().location]",
        "vmName": "centos",
        "apiVersion": "2015-06-15",
        "scriptUrl": "https://raw.githubusercontent.com/twill-net/infra/master/vm-disk-utils-centos-0.1.sh"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmName'), '/azureVmUtils')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publisher": "Microsoft.OSTCExtensions",
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "1.5.2.1",
                "settings": {
                    "fileUris": [
                        "[variables('scriptUrl')]"
                    ],
                    "commandToExecute": "bash ./commandToExecute.bash"
                }
            }
        }
    ]
}
